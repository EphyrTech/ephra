# =============================================================================
# STAGING ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains staging-specific environment variables
# Used for testing production-like environment before deployment

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
APP_ENV=staging
NODE_ENV=production
DEBUG=false

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Staging API URLs
API_BASE_URL=https://staging-api.ephra.com/v1
API_BASE_URL_WEB=https://staging-api.ephra.com/v1
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# API Authentication
API_KEY=your_staging_api_key
JWT_SECRET=your_staging_jwt_secret_key

# =============================================================================
# BACKEND SERVICE URLS
# =============================================================================
BACKEND_URL=https://staging-api.ephra.com
FRONTEND_URL=https://staging.ephra.com
WEBSOCKET_URL=wss://staging-api.ephra.com/ws

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Staging PostgreSQL Database
DATABASE_URL=postgresql://staging_user:staging_password@staging-db-host:5432/mental_health_staging_db
DATABASE_HOST=staging-db-host
DATABASE_PORT=5432
DATABASE_NAME=mental_health_staging_db
DATABASE_USER=staging_user
DATABASE_PASSWORD=staging_password

# =============================================================================
# THIRD-PARTY SERVICES (Test/Staging Keys)
# =============================================================================

# Stripe Test Keys (use test keys in staging)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_test_webhook_secret

# Google Services (Staging)
GOOGLE_API_KEY=your_staging_google_api_key
GOOGLE_CLIENT_ID=your_staging_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_staging_google_oauth_client_secret
GOOGLE_CALENDAR_API_KEY=your_staging_google_calendar_api_key

# =============================================================================
# FILE STORAGE & MEDIA
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,audio/mpeg,audio/wav,application/pdf
UPLOAD_DIRECTORY=uploads

# Staging cloud storage
CLOUD_STORAGE_PROVIDER=aws
AWS_S3_BUCKET=ephra-staging-uploads
AWS_ACCESS_KEY_ID=your_staging_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_staging_aws_secret_access_key
AWS_REGION=us-east-1

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
ACCESS_TOKEN_EXPIRE_MINUTES=43200
REFRESH_TOKEN_EXPIRE_DAYS=30
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=15
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
# Staging email settings
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=staging@ephra.com
SMTP_PASSWORD=your_staging_email_password
EMAIL_FROM=staging@ephra.com
EMAIL_FROM_NAME=Ephra Health (Staging)

# =============================================================================
# NOTIFICATION SERVICES
# =============================================================================
EXPO_PUSH_TOKEN=your_staging_expo_push_token
FCM_SERVER_KEY=your_staging_fcm_server_key
APNS_KEY_ID=your_staging_apns_key_id
APNS_TEAM_ID=your_staging_apns_team_id

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
SENTRY_DSN=https://your_staging_sentry_dsn@sentry.io/staging_project_id
ANALYTICS_TRACKING_ID=GA_STAGING_TRACKING_ID
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_SAMPLE_RATE=0.5

# =============================================================================
# CACHING & PERFORMANCE
# =============================================================================
REDIS_URL=redis://staging-redis-host:6379
CACHE_TTL_SECONDS=300

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
EXPO_DEVTOOLS=false
REACT_NATIVE_DEBUGGER=false
FLIPPER_ENABLED=false
FAST_REFRESH=false
LIVE_RELOAD=false

# =============================================================================
# MOBILE APP CONFIGURATION
# =============================================================================
APP_NAME=Ephra (Staging)
APP_SLUG=ephra-staging
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1
IOS_BUNDLE_ID=com.ephra.app.staging
ANDROID_PACKAGE=com.ephra.app.staging
URL_SCHEME=ephra-staging
UNIVERSAL_LINK_DOMAIN=staging.ephra.com

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_STRIPE_PAYMENTS=true
FEATURE_GOOGLE_CALENDAR=true
FEATURE_PUSH_NOTIFICATIONS=true
FEATURE_OFFLINE_MODE=false
FEATURE_ANALYTICS=true
FEATURE_CRASH_REPORTING=true

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================
TEST_DATABASE_URL=postgresql://test_user:test_password@staging-test-db:5432/mental_health_test_db
TEST_API_BASE_URL=https://staging-api.ephra.com/v1
MOCK_EXTERNAL_SERVICES=false

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
BUILD_ENVIRONMENT=staging
DEPLOY_TARGET=staging
DOCKER_REGISTRY=your-staging-registry.com
DOCKER_IMAGE_TAG=staging
KUBERNETES_NAMESPACE=ephra-staging
HELM_RELEASE_NAME=ephra-staging
